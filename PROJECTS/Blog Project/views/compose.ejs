
<%- include("partials/header") -%>

  <h1>Compose</h1>

  <form action="/compose" method="POST" class="">

    <div class="form-group">

      <label for="textInput">Title</label>
      <input type="text" name="postTitle" id="textInput" placeholder="Post Title" class="form-control">

    </div>

    <div class="form-group">

      <label for="messageInput">Post</label>
      <textarea name="postBody" cols="40" rows="5" id="messageInput" class="form-control" placeholder="Post Message"></textarea>

    </div>

    <button type="submit" name="list" value="" class="btn btn-primary"> Publish </button>

  </form>

